.side-bar
  .side-bar__header
    .side-bar__header__name
      = current_user.name
    .side-bar__header__lists
      = link_to new_group_path, class: "side-bar__header__lists__btn side-bar__header__lists__btn--groups-new" do
        = fa_icon 'edit', class: "side-bar__header__lists__btn--icon-edit"
      = link_to edit_user_path(current_user), class: "side-bar__header__lists__btn btn--users-edit" do
        = fa_icon 'cog', class: "side-bar__header__lists__btn--icon-cog" 

  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups__group
        = link_to group_messages_path(group) do
          .side-bar__groups__group__name
            = group.name
          .side-bar__groups__group__message
            最終投稿：sample
.chat
  .chat__header
    .chat__header__left-contents
      .chat__header__left-contents__group-name
        グループ名：sample
      .chat__header__left-contents__menber-list
        メンバーリスト：sample
    .chat__header__right-contents
      = link_to "",class: "chat__header__right-contents__btn chat__header__right-contents__btn--group-neme-edit" do
        Edit
  .chat__messages
    .chat__messages__message
      .chat__messages__message__upper
        .chat__messages__message__upper__name
          名前：sample
        .chat__messages__message__upper__date
          2019/05/05
      .chat__messages__message__lower
        おはよう
  .chat__form
    .chat__form__new-message
      = form_for "" do |f|
        = f.text_field :body, class: "chat__form__new-message__text", placeholder: "type a message"
        %label.chat__form__new-message__upload-label{for: "upload-icon"}
          %i.fa.fa-picture-o
          = f.file_field :image, id:"upload-icon", class: "chat__form__new-message__upload-icon"
        = f.submit "Send", class: "chat__form__new-message__submit"
        